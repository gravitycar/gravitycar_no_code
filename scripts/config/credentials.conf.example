# Gravitycar Framework - Credential Configuration Template
# ==============================================================================
# 
# This file contains credential templates for the CI/CD pipeline.
# Copy this file to credentials.conf and fill in the actual values.
# 
# IMPORTANT: Never commit credentials.conf to version control!
# Add credentials.conf to .gitignore
#
# ==============================================================================

[production_database]
host=production-db.gravitycar.com
port=3306
username=production_user
password=REPLACE_WITH_ACTUAL_PASSWORD
database=gravitycar_production

[production_ssh]
host=api.gravitycar.com
port=22
username=deploy
private_key_path=/path/to/private/key
# OR for password-based auth (not recommended):
# password=REPLACE_WITH_ACTUAL_PASSWORD

[production_frontend_ssh]
host=react.gravitycar.com
port=22
username=deploy
private_key_path=/path/to/private/key

[staging_database]
host=staging-db.gravitycar.com
port=3306
username=staging_user
password=REPLACE_WITH_ACTUAL_PASSWORD
database=gravitycar_staging

[staging_ssh]
host=staging.gravitycar.com
port=22
username=deploy
private_key_path=/path/to/private/key

[notification_email]
smtp_host=smtp.gmail.com
smtp_port=587
smtp_user=notifications@gravitycar.com
smtp_password=REPLACE_WITH_APP_PASSWORD
from_email=notifications@gravitycar.com
from_name=Gravitycar Deployment System

[external_services]
tmdb_api_key=REPLACE_WITH_TMDB_API_KEY
google_oauth_client_id=REPLACE_WITH_GOOGLE_CLIENT_ID
google_oauth_client_secret=REPLACE_WITH_GOOGLE_CLIENT_SECRET

[monitoring]
health_check_api_key=REPLACE_WITH_MONITORING_API_KEY
notification_webhook_url=REPLACE_WITH_SLACK_WEBHOOK_URL

# ==============================================================================
# GitHub Secrets Mapping
# ==============================================================================
# 
# When using GitHub Actions, these values should be stored as repository secrets:
#
# PRODUCTION_SSH_HOST=api.gravitycar.com
# PRODUCTION_SSH_USER=deploy
# PRODUCTION_SSH_KEY=[private key content]
# PRODUCTION_DB_HOST=production-db.gravitycar.com
# PRODUCTION_DB_NAME=gravitycar_production
# PRODUCTION_DB_USER=production_user
# PRODUCTION_DB_PASSWORD=[password]
# TMDB_API_KEY=[api key]
# NOTIFICATION_EMAIL_HOST=smtp.gmail.com
# NOTIFICATION_EMAIL_USER=notifications@gravitycar.com
# NOTIFICATION_EMAIL_PASSWORD=[app password]
# 
# ==============================================================================